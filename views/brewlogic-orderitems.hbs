<h1>Order Items</h1>

{{!-- READ table --}}
<table>
  <thead>
    <tr>
      {{#each orderitems.[0]}}<th>{{@key}}</th>{{/each}}
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each orderitems}}
    <tr>
      {{#each this}}<td>{{this}}</td>{{/each}}

      {{!-- DELETE form --}}
      <td>
        <form method="POST" action="/orderitems/delete">
          <input type="hidden" name="delete_orderitem_id" value="{{orderItemID}}" />
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{!-- CREATE form --}}
<h2>Add a Product to an Existing Order</h2>
<form class="cuForm" id="create_orderitem_form" method="POST" action="/orderitems/add">
  <p><em>Note: You cannot add the same product twice to the same order. Use Update instead.</em></p>

  <label for="orderID">Order:</label>
  <select name="orderID" id="orderID" required>
    <option value="" disabled selected>Select Order</option>
    {{#each salesorders}}
     <option value="{{this.orderID}}">{{this.orderID}}</option>
    {{/each}}
  </select>

  <label for="productID">Product:</label>
  <select name="productID" id="productID" required>
    <option value="" disabled selected>Select Product</option>
    {{#each products}}
    <option value="{{this.productID}}">
      {{this.productID}} - {{this.productName}}
    </option>
    {{/each}}
  </select>

  <label for="orderQty">Quantity:</label>
  <input type="number" name="orderQty" id="orderQty" required />

  <label for="unitPrice">Unit Price:</label>
  <input type="number" step="0.01" name="unitPrice" id="unitPrice" required />

  <button type="submit">Add Item</button>
</form>

{{!-- UPDATE form --}}
<h2>Update an Order Item</h2>
<form class="cuForm" id="update_orderitem_form" method="POST" action="/orderitems/update">
  <label for="orderItemID">Order Item to Update:</label>
  <select name="orderItemID" id="orderItemID" required>
    <option value="" disabled selected>Select an Item</option>
    {{#each orderitems}}
    <option value="{{this.orderItemID}}">
      {{this.orderItemID}} - {{this.productID}} (Order {{this.orderID}})
    </option>
    {{/each}}
  </select>

  <label for="orderQty">New Quantity:</label>
  <input type="number" name="orderQty" id="orderQty" />

  <label for="unitPrice">New Unit Price:</label>
  <input type="number" step="0.01" name="unitPrice" id="unitPrice" />

  <button type="submit">Update Item</button>
</form>
