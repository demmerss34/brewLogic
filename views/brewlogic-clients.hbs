<h1>Clients</h1>

{{!-- READ table --}}
<table>
  <thead>
    <tr>
      {{#each clients.[0]}}
      <th>{{@key}}</th>
      {{/each}}
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each clients}}
    <tr>
      {{#each this}}
      <td>{{this}}</td>
      {{/each}}

      {{!-- DELETE form --}}
      <td>
        <form method="POST" action="/clients/delete">
          <input type="hidden" name="delete_client_id" value="{{clientID}}" />
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{!-- CREATE form --}}
<h2>Create a Client</h2>
<form class="cuForm" id="create_client_form">
  <label for="create_client_firstName">First Name:</label>
  <input type="text" name="create_client_firstName" id="create_client_firstName" required />

  <label for="create_client_lastName">Last Name:</label>
  <input type="text" name="create_client_lastName" id="create_client_lastName" required />

  <label for="create_client_email">Email:</label>
  <input type="email" name="create_client_email" id="create_client_email" />

  <label for="create_client_phoneNumber">Phone Number:</label>
  <input type="text" name="create_client_phoneNumber" id="create_client_phoneNumber" />

  <label for="create_client_address">Address:</label>
  <input type="text" name="create_client_address" id="create_client_address" />

  <label for="create_client_categoryID">Category:</label>
  <select name="create_client_categoryID" id="create_client_categoryID" required>
    <option value="" disabled selected>Select Category</option>
    {{#each categories}}
    <option value="{{this.categoryID}}">{{this.categoryName}}</option>
    {{/each}}
  </select>

  <input type="submit" />
</form>

{{!-- UPDATE form --}}
<h2>Update a Client</h2>
<form class="cuForm" id="update_client_form">
  <label for="update_client_id">Client to Update:</label>
  <select name="update_client_id" id="update_client_id" required>
    <option value="" disabled selected>Select a Client</option>
    {{#each clients}}
    <option value="{{this.clientID}}">
      {{this.clientID}} - {{this.firstName}} {{this.lastName}}
    </option>
    {{/each}}
  </select>

  <label for="update_client_email">New Email:</label>
  <input type="email" name="update_client_email" id="update_client_email" />

  <label for="update_client_phoneNumber">New Phone Number:</label>
  <input type="text" name="update_client_phoneNumber" id="update_client_phoneNumber" />

  <label for="update_client_address">New Address:</label>
  <input type="text" name="update_client_address" id="update_client_address" />

  <label for="update_client_categoryID">New Category:</label>
  <select name="update_client_categoryID" id="update_client_categoryID">
    <option value="" disabled selected>Select Category</option>
    {{#each categories}}
    <option value="{{this.categoryID}}">{{this.categoryName}}</option>
    {{/each}}
  </select>

  <input type="submit" />
</form>

