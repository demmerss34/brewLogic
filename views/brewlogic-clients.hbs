<h1>Clients</h1>

{{!-- READ table --}}
<table>
  <thead>
    <tr>
      {{#each clients.[0]}}
      <th>{{@key}}</th>
      {{/each}}
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each clients}}
    <tr>
      {{#each this}}
      <td>{{this}}</td>
      {{/each}}

      {{!-- DELETE form --}}
      <td>
        <form method="POST" action="/clients/delete">
          <input type="hidden" name="delete_client_id" value="{{clientID}}" />
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{!-- CREATE form --}}
<h2>Create a Client</h2>
<form class="cuForm" id="create_client_form" method="POST" action="/clients/add">
  <label for="firstName">First Name:</label>
  <input type="text" name="firstName" id="firstName" required />

  <label for="lastName">Last Name:</label>
  <input type="text" name="lastName" id="lastName" />

  <label for="email">Email:</label>
  <input type="email" name="email" id="email" required />

  <label for="phoneNumber">Phone Number:</label>
  <input type="text" name="phoneNumber" id="phoneNumber" />

  <label for="address">Address:</label>
  <input type="text" name="address" id="address" />

  <label for="categoryID">Category:</label>
  <select name="categoryID" id="categoryID" required>
    <option value="" disabled selected>Select Category</option>
    {{#each categories}}
    <option value="{{this.categoryID}}">{{this.categoryName}}</option>
    {{/each}}
  </select>

  <button type="submit">Add Client</button>
</form>

{{!-- UPDATE form --}}
<h2>Update a Client</h2>
<form class="cuForm" id="update_client_form" method="POST" action="/clients/update">
  <label for="clientID">Client to Update:</label>
  <select name="clientID" id="clientID" required>
    <option value="" disabled selected>Select a Client</option>
    {{#each clients}}
    <option value="{{this.clientID}}">
      {{this.clientID}} - {{this.firstName}} {{this.lastName}}
    </option>
    {{/each}}
  </select>

  <label for="firstName">New First Name:</label>
  <input type="text" name="firstName" id="firstName" />

  <label for="lastName">New Last Name:</label>
  <input type="text" name="lastName" id="lastName" />

  <label for="email">New Email:</label>
  <input type="email" name="email" id="email" />

  <label for="phoneNumber">New Phone Number:</label>
  <input type="text" name="phoneNumber" id="phoneNumber" />

  <label for="address">New Address:</label>
  <input type="text" name="address" id="address" />

  <label for="categoryID">New Category:</label>
  <select name="categoryID" id="categoryID">
    <option value="" disabled selected>Select Category</option>
    {{#each categories}}
    <option value="{{this.categoryID}}">{{this.categoryName}}</option>
    {{/each}}
  </select>

  <button type="submit">Update Client</button>
</form>
