<h1>Clients</h1>

{{!-- READ table --}}
<table>
  <thead>
    <tr>
      {{#each clients.[0]}}
      <th>{{@key}}</th>
      {{/each}}
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each clients}}
    <tr>
      {{#each this}}
      <td>{{this}}</td>
      {{/each}}

      {{!-- DELETE form --}}
      <td>
        <form method="POST" action="/clients/delete">
          <input type="hidden" name="delete_client_id" value="{{clientID}}" />
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{!-- CREATE form --}}
<h2>Create a Client</h2>
<form class="cuForm" id="create_client_form" method="POST" action="/clients/add">
  <label for="firstName">First Name:</label>
  <input type="text" name="firstName" id="firstName" required />

  <label for="lastName">Last Name:</label>
  <input type="text" name="lastName" id="lastName" />

  <label for="email">Email:</label>
  <input type="email" name="email" id="email" required />

  <label for="phoneNumber">Phone Number:</label>
  <input type="text" name="phoneNumber" id="phoneNumber" />

  <label for="address">Address:</label>
  <input type="text" name="address" id="address" />

  <label for="categoryID">Category:</label>
  <select name="categoryID" id="categoryID" required>
    <option value="" disabled selected>Select Category</option>
    {{#each categories}}
    <option value="{{this.categoryID}}">{{this.categoryName}}</option>
    {{/each}}
  </select>

  <button type="submit">Add Client</button>
</form>

{{!-- UPDATE form --}}
<h2>Update a Client</h2>
<form class="cuForm" id="update_client_form" method="POST" action="/clients/update">
  <label for="clientID">Client to Update:</label>
  <select name="clientID" id="clientID" required>
    <option value="" disabled selected>Select a Client</option>
    {{#each clients}}
    <option value="{{this.clientID}}"
            data-first="{{this.firstName}}"
            data-last="{{this.lastName}}"
            data-email="{{this.email}}"
            data-phone="{{this.phoneNumber}}"
            data-address="{{this.address}}"
            data-category="{{this.categoryID}}">
      {{this.clientID}} - {{this.firstName}} {{this.lastName}}
    </option>
    {{/each}}
  </select>

  <label for="updateFirstName">First Name:</label>
  <input type="text" name="firstName" id="updateFirstName" />

  <label for="updateLastName">Last Name:</label>
  <input type="text" name="lastName" id="updateLastName" />

  <label for="updateEmail">Email:</label>
  <input type="email" name="email" id="updateEmail" />

  <label for="updatePhoneNumber">Phone Number:</label>
  <input type="text" name="phoneNumber" id="updatePhoneNumber" />

  <label for="updateAddress">Address:</label>
  <input type="text" name="address" id="updateAddress" />

  <label for="updateCategoryID">Category:</label>
  <select name="categoryID" id="updateCategoryID">
    <option value="" disabled selected>Select Category</option>
    {{#each categories}}
    <option value="{{this.categoryID}}">{{this.categoryName}}</option>
    {{/each}}
  </select>

  <button type="submit">Update Client</button>
</form>

<script>
document.getElementById('clientID').addEventListener('change', function() {
  const option = this.selectedOptions[0];
  document.getElementById('updateFirstName').value = option.dataset.first || "";
  document.getElementById('updateLastName').value = option.dataset.last || "";
  document.getElementById('updateEmail').value = option.dataset.email || "";
  document.getElementById('updatePhoneNumber').value = option.dataset.phone || "";
  document.getElementById('updateAddress').value = option.dataset.address || "";
  document.getElementById('updateCategoryID').value = option.dataset.category || "";
});
</script>
