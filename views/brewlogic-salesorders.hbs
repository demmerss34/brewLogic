<h1>Sales Orders</h1>

{{!-- READ table --}}
<table>
  <thead>
    <tr>
      {{#each salesorders.[0]}}
      <th>{{@key}}</th>
      {{/each}}
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each salesorders}}
    <tr>
      <td>{{orderID}}</td>
      <td>{{formatDate orderDate}}</td>
      <td>{{clientID}}</td>
      <td>{{totalAmount}}</td>
      <td>{{orderStatus}}</td>

      <td>
        {{!-- DELETE form --}}
        <form method="POST" action="/salesorders/delete">
          <input type="hidden" name="delete_salesorder_id" value="{{orderID}}" />
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{!-- CREATE form --}}
<h2>Create a Sales Order</h2>
<form class="cuForm" id="create_salesorder_form" method="POST" action="/salesorders/add">
  <label for="orderDate">Order Date:</label>
  <input type="date" name="orderDate" id="orderDate" required />

  <label for="clientID">Client:</label>
  <select name="clientID" id="clientID" required>
    <option value="" disabled selected>Select Client</option>
    {{#each clients}}
    <option value="{{this.clientID}}">
      {{this.clientID}} - {{this.firstName}} {{this.lastName}}
    </option>
    {{/each}}
  </select>

  <label for="totalAmount">Total Amount:</label>
  <input type="number" step="0.01" name="totalAmount" id="totalAmount" required />

  <label for="orderStatus">Order Status:</label>
  <input type="text" name="orderStatus" id="orderStatus" required />

  <button type="submit">Add Order</button>
</form>

{{!-- UPDATE form --}}
<h2>Update a Sales Order</h2>
<form class="cuForm" id="update_salesorder_form" method="POST" action="/salesorders/update">
  <label for="orderID">Order to Update:</label>
  <select name="orderID" id="orderID" required>
    <option value="" disabled selected>Select an Order</option>
    {{#each salesorders}}
     <option value="{{this.orderID}}">{{this.orderID}}</option>
    {{/each}}
  </select>

  <label for="orderDate">New Order Date:</label>
  <input type="date" name="orderDate" id="orderDate" />

  <label for="clientID">New Client:</label>
  <select name="clientID" id="clientID">
    <option value="" disabled selected>Select Client</option>
    {{#each clients}}
    <option value="{{this.clientID}}">
      {{this.clientID}} - {{this.firstName}} {{this.lastName}}
    </option>
    {{/each}}
  </select>

  <label for="totalAmount">New Total Amount:</label>
  <input type="number" step="0.01" name="totalAmount" id="totalAmount" />

  <label for="orderStatus">New Order Status:</label>
  <input type="text" name="orderStatus" id="orderStatus" />

  <button type="submit">Update Order</button>
</form>
