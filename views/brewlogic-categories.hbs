<h1>Categories</h1>

{{!-- READ table --}}
<table>
  <thead>
    <tr>
      {{#each categories.[0]}}
      <th>{{@key}}</th>
      {{/each}}
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
    <tr>
      {{#each this}}
      <td>{{this}}</td>
      {{/each}}

      {{!-- DELETE form --}}
      <td>
        <form method="POST" action="/categories/delete">
          <input type="hidden" name="delete_category_id" value="{{categoryID}}" />
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{!-- CREATE form --}}
<h2>Create a Category</h2>
<form class="cuForm" id="create_category_form">
  <label for="create_category_name">Category Name:</label>
  <input type="text" name="create_category_name" id="create_category_name" required />
  <input type="submit" />
</form>

{{!-- UPDATE form --}}
<h2>Update a Category</h2>
<form class="cuForm" id="update_category_form">
  <label for="update_category_id">Select Category:</label>
  <select name="update_category_id" id="update_category_id" required>
    <option value="" disabled selected>Select a category</option>
    {{#each categories}}
    <option value="{{this.categoryID}}">{{this.categoryName}}</option>
    {{/each}}
  </select>

  <label for="update_category_name">New Category Name:</label>
  <input type="text" name="update_category_name" id="update_category_name" required />

  <input type="submit" />
</form>