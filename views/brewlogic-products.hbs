<h1>Products</h1>

{{!-- READ table --}}
<table>
  <thead>
    <tr>
      {{#each products.[0]}}
      <th>{{@key}}</th>
      {{/each}}
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      {{#each this}}
      <td>{{this}}</td>
      {{/each}}

      {{!-- DELETE form --}}
      <td>
        <form method="POST" action="/products/delete">
          <input type="hidden" name="delete_product_id" value="{{productID}}" />
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{!-- CREATE form --}}
<h2>Create a Product</h2>
<form class="cuForm" id="create_product_form" method="POST" action="/products/add">
  <label for="productName">Name:</label>
  <input type="text" name="productName" id="productName" required />

  <label for="beerType">Beer Type:</label>
  <input type="text" name="beerType" id="beerType" required />

  <label for="beerPrice">Price:</label>
  <input type="number" step="0.01" name="beerPrice" id="beerPrice" required />

  <label for="productInStock">Stock Quantity:</label>
  <input type="number" name="productInStock" id="productInStock" required />

  <label for="currentlyAvailable">Available:</label>
  <select name="currentlyAvailable" id="currentlyAvailable" required>
    <option value="" disabled selected>Select Availability</option>
    <option value="1">Yes</option>
    <option value="0">No</option>
  </select>

  <button type="submit">Add Product</button>
</form>

{{!-- UPDATE form --}}
<h2>Update a Product</h2>
<form class="cuForm" id="update_product_form" method="POST" action="/products/update">
  <label for="productID">Product to Update:</label>
  <select name="productID" id="productID" required>
    <option value="" disabled selected>Select a Product</option>
    {{#each products}}
    <option value="{{this.productID}}">
      {{this.productID}} - {{this.productName}}
    </option>
    {{/each}}
  </select>

  <label for="productName">New Name:</label>
  <input type="text" name="productName" id="productName" />

  <label for="beerType">New Beer Type:</label>
  <input type="text" name="beerType" id="beerType" />

  <label for="beerPrice">New Price:</label>
  <input type="number" step="0.01" name="beerPrice" id="beerPrice" />

  <label for="productInStock">New Stock Quantity:</label>
  <input type="number" name="productInStock" id="productInStock" />

  <label for="currentlyAvailable">New Availability:</label>
  <select name="currentlyAvailable" id="currentlyAvailable">
    <option value="" disabled selected>Select Availability</option>
    <option value="1">Yes</option>
    <option value="0">No</option>
  </select>

  <button type="submit">Update Product</button>
</form>
