<h1>Products</h1>

{{!-- READ table --}}
<table>
  <thead>
    <tr>
      {{#each products.[0]}}
      <th>{{@key}}</th>
      {{/each}}
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      {{#each this}}
      <td>{{this}}</td>
      {{/each}}

      {{!-- DELETE form --}}
      <td>
        <form method="POST" action="/products/delete">
          <input type="hidden" name="delete_product_id" value="{{productID}}" />
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{!-- CREATE form --}}
<h2>Create a Product</h2>
<form class="cuForm" id="create_product_form">
  <label for="create_product_name">Name:</label>
  <input type="text" name="create_product_name" id="create_product_name" required />

  <label for="create_product_beerType">Beer Type:</label>
  <input type="text" name="create_product_beerType" id="create_product_beerType" required />

  <label for="create_product_beerPrice">Price:</label>
  <input type="number" step="0.01" name="create_product_beerPrice" id="create_product_beerPrice" required />

  <label for="create_product_productInStock">Stock Quantity:</label>
  <input type="number" name="create_product_productInStock" id="create_product_productInStock" required />

  <label for="create_product_currentlyAvailable">Available:</label>
  <select name="create_product_currentlyAvailable" id="create_product_currentlyAvailable" required>
    <option value="" disabled selected>Select Availability</option>
    <option value="1">Yes</option>
    <option value="0">No</option>
  </select>

  <input type="submit" />
</form>

{{!-- UPDATE form --}}
<h2>Update a Product</h2>
<form class="cuForm" id="update_product_form">
  <label for="update_product_id">Product to Update:</label>
  <select name="update_product_id" id="update_product_id" required>
    <option value="" disabled selected>Select a Product</option>
    {{#each products}}
    <option value="{{this.productID}}">
      {{this.productID}} - {{this.productName}}
    </option>
    {{/each}}
  </select>

  <label for="update_product_beerType">New Beer Type:</label>
  <input type="text" name="update_product_beerType" id="update_product_beerType" />

  <label for="update_product_beerPrice">New Price:</label>
  <input type="number" step="0.01" name="update_product_beerPrice" id="update_product_beerPrice" />

  <label for="update_product_productInStock">New Stock Quantity:</label>
  <input type="number" name="update_product_productInStock" id="update_product_productInStock" />

  <label for="update_product_currentlyAvailable">New Availability:</label>
  <select name="update_product_currentlyAvailable" id="update_product_currentlyAvailable">
    <option value="" disabled selected>Select Availability</option>
    <option value="1">Yes</option>
    <option value="0">No</option>
  </select>

  <input type="submit" />
</form>

