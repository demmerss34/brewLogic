<h1>Products</h1>

{{!-- READ table --}}
<table>
  <thead>
    <tr>
      {{#each products.[0]}}
      <th>{{@key}}</th>
      {{/each}}
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <td>{{productID}}</td>
      <td>{{productName}}</td>
      <td>{{beerType}}</td>
      <td>{{beerPrice}}</td>
      <td>{{productInStock}}</td>
      <td>
        {{#if currentlyAvailable}}
          Yes
        {{else}}
          No
        {{/if}}
      </td>

      {{!-- DELETE form --}}
      <td>
        <form method="POST" action="/products/delete">
          <input type="hidden" name="delete_product_id" value="{{productID}}" />
          <button type="submit">Delete</button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>

{{!-- CREATE form --}}
<h2>Create a Product</h2>
<form class="cuForm" id="create_product_form" method="POST" action="/products/add">
  <label for="productName">Name:</label>
  <input type="text" name="productName" id="productName" required />

  <label for="beerType">Beer Type:</label>
  <input type="text" name="beerType" id="beerType" required />

  <label for="beerPrice">Price:</label>
  <input type="number" step="0.01" name="beerPrice" id="beerPrice" required />

  <label for="productInStock">Stock Quantity:</label>
  <input type="number" name="productInStock" id="productInStock" required />

  <label for="currentlyAvailable">Available:</label>
  <select name="currentlyAvailable" id="currentlyAvailable" required>
    <option value="" disabled selected>Select Availability</option>
    <option value="1">Yes</option>
    <option value="0">No</option>
  </select>

  <button type="submit">Add Product</button>
</form>

{{!-- UPDATE form --}}
<h2>Update a Product</h2>
<form class="cuForm" id="update_product_form" method="POST" action="/products/update">
  <label for="updateProductID">Product to Update:</label>
  <select name="productID" id="updateProductID" required>
    <option value="" disabled selected>Select a Product</option>
    {{#each products}}
    <option value="{{this.productID}}"
            data-name="{{this.productName}}"
            data-type="{{this.beerType}}"
            data-price="{{this.beerPrice}}"
            data-stock="{{this.productInStock}}"
            data-available="{{this.currentlyAvailable}}">
      {{this.productID}} - {{this.productName}}
    </option>
    {{/each}}
  </select>

  <label for="updateProductName">Name:</label>
  <input type="text" name="productName" id="updateProductName" />

  <label for="updateBeerType">Beer Type:</label>
  <input type="text" name="beerType" id="updateBeerType" />

  <label for="updateBeerPrice">Price:</label>
  <input type="number" step="0.01" name="beerPrice" id="updateBeerPrice" />

  <label for="updateProductInStock">Stock Quantity:</label>
  <input type="number" name="productInStock" id="updateProductInStock" />

  <label for="updateCurrentlyAvailable">Available:</label>
  <select name="currentlyAvailable" id="updateCurrentlyAvailable">
    <option value="" disabled>Select Availability</option>
    <option value="1">Yes</option>
    <option value="0">No</option>
  </select>

  <button type="submit">Update Product</button>
</form>

<script>
document.getElementById('updateProductID').addEventListener('change', function() {
  const option = this.selectedOptions[0];
  document.getElementById('updateProductName').value = option.dataset.name || "";
  document.getElementById('updateBeerType').value = option.dataset.type || "";
  document.getElementById('updateBeerPrice').value = option.dataset.price || "";
  document.getElementById('updateProductInStock').value = option.dataset.stock || "";
  document.getElementById('updateCurrentlyAvailable').value = option.dataset.available || "";
});
</script>
